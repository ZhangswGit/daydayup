<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swapServer.mapper.CommonMapper">

    <resultMap id="UserResultMap" type="com.swapServer.bean.User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="nick_name" property="nickName"/>
        <result column="pass_word" property="passWord"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="role_id" property="roleId"/>
        <result column="organization_id" property="organizationId"/>
        <association property="role" column="role_id" select="findRoleByRoleId"/>
        <association property="organization" column="organization_id" select="findOrganizationByOrganizationId"/>
    </resultMap>

    <resultMap id="RoleResultMap" type="com.swapServer.bean.Role">
        <id column="id" property="id"/>
        <result column="role_name" property="roleName"/>
        <association property="parentRole" column="parent_id" select="findRoleByRoleId"/>
        <collection property="resources" ofType="com.swapServer.bean.Resource" column="id" select="findAllResourceByRoleId"/>
    </resultMap>

    <resultMap id="ResourceResultMap" type="com.swapServer.bean.Resource">
        <id column="id" property="id"/>
        <result property="type" column="type"/>
        <result property="parentId" column="parent_id"/>
        <association property="parentResource" column="parent_id" select="findResourceByResourceId"/>
    </resultMap>

    <resultMap id="OrganizationResultMap" type="com.swapServer.bean.Organization">
        <id column="id" property="id"/>
        <result property="parentId" column="parent_id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <association property="parentOrganization" column="parent_id" select="findOrganizationByOrganizationId"/>
    </resultMap>

    <select id="findRoleByRoleId" resultMap="RoleResultMap">
        select * from role where id = #{id} and is_delete = 0
    </select>

    <select id="findUserByUserId" resultMap="UserResultMap">
        select
        *
        from user where id = #{id} and is_delete = 0
    </select>

    <select id="findResourceByResourceId" resultMap="ResourceResultMap">
        select * from resource where id = #{id} and is_delete = 0
    </select>

    <select id="findOrganizationByOrganizationId" resultMap="OrganizationResultMap">
        select * from organization where id = #{id} and is_delete = 0
    </select>

    <select id="findAllResourceByRoleId" resultMap="ResourceResultMap">
        select re.* from resource re
        left join role_resource rr
        on rr.resource_id = re.id
        left join role r
        on r.id = #{id}
        where rr.role_id = #{id} and re.is_delete = 0 and r.is_delete = 0;
    </select>
</mapper>
